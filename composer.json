{
  "require": {
    "craftcms/cms": "^3.3.0",
    "vlucas/phpdotenv": "^2.4.0",
    "craftcms/redactor": "2.1.6",
    "verbb/super-table": "^2.0.0"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
